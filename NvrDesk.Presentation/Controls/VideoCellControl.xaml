<UserControl x:Class="NvrDesk.Presentation.Controls.VideoCellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF">
    <Border BorderBrush="#555" BorderThickness="1" Margin="4" Background="#111">
        <Grid>
            <vlc:VideoView MediaPlayer="{Binding MediaPlayer}" />
            <StackPanel VerticalAlignment="Top" Background="#66000000" Orientation="Vertical">
                <TextBlock Text="{Binding Title}" Foreground="White" Padding="6,2" FontWeight="SemiBold" />
                <TextBlock Text="{Binding Status}" Foreground="LightGray" Padding="6,0,6,4" FontSize="11" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
